# Maintainer: Laramy Black <laramy2020@gmail.com>

pkgname=nuvola-app-jupiter-broadcasting
pkgver=1.5
pkgrel=1
pkgdesc="Jupiter broadcasting integration for Nuvola Player."
arch=(any)
url="https://github.com/tiliado/nuvola-app-jupiter-broadcasting"
license=(BSD)
depends=(nuvolaruntime imagemagick)
makedepends=(python-nuvolasdk scour)
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/tiliado/${pkgname}/archive/${pkgver}.tar.gz")
sha256sums=('7addd0b13c33b6182b8ad8a9289d578a5b08ac46a278ca724c5aaf782b9ad244')

build() {
  cd "$srcdir/${pkgname}-${pkgver}"
  ./configure --prefix=/usr 
  make all
}

package() {
  cd "$srcdir/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  install -Dm644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}"
}

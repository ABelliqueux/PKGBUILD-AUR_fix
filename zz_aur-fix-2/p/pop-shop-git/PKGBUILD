pkgname=pop-shop-git
pkgver=r3966.eff4ef85
pkgrel=1
pkgdesc="A fast and simple software center"
arch=(x86_64)
url="https://github.com/pop-os/shop"
license=(GPL3)
depends=(granite libhandy libpackagekit-glib appstream flatpak)
makedepends=(git meson vala)
provides=(io.elementary.appcenter)
provides=(io.elementary.appcenter)
source=("git+https://github.com/pop-os/shop.git")
sha256sums=('SKIP')

pkgver() {
    cd shop
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	arch-meson shop build
	meson compile -C build
}

# No tests defined
#check() {
#	meson test -C build --print-errorlogs
#}

package() {
	DESTDIR="$pkgdir" meson install -C build
}
